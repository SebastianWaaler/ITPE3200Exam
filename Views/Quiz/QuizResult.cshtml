@* 
    Quiz results page displayed after user submits a quiz.
    Shows score (earned points / total points), percentage, and a visual progress bar.
    Displays encouraging messages based on performance (Perfect Score, Great Job, etc.).
    Progress bar color changes based on score: green (70%+), yellow (50-69%), red (<50%).
*@
@model QuizApp.Models.QuizResultViewModel
@using System.Text.Json

@{
    ViewData["Title"] = "Quiz Result";

    @* Convert server model to JSON for Vue.js *@
    var resultJson = JsonSerializer.Serialize(new {
        title = Model.QuizTitle ?? "",
        earned = Model.EarnedPoints,
        total = Model.TotalPoints
    });
}

@* Vue.js root element for quiz results display *@
<div id="quiz-result-app" class="mt-4">
    <div class="card shadow-sm p-5 text-center">
        <h1 class="mb-4">Quiz Result</h1>

        @* Quiz title *@
        <h2 class="mb-4 text-primary">{{ result.title }}</h2>

        <div class="mb-4">
            @* Display score as "earned / total points" *@
            <div class="display-4 mb-2">
                <strong>{{ result.earned }}</strong> / <strong>{{ result.total }}</strong>
            </div>
            <p class="text-muted">points</p>
            
            @* Progress bar and percentage - only shown if quiz has questions *@
            <div v-if="result.total > 0" class="mt-3">
                @* Visual progress bar - color changes based on percentage *@
                <div class="progress" style="height: 30px;">
                    <div 
                        class="progress-bar" 
                        :class="percentage >= 70 ? 'bg-success' : percentage >= 50 ? 'bg-warning' : 'bg-danger'"
                        :style="`width: ${percentage}%`"
                        role="progressbar">
                        {{ percentage.toFixed(0) }}%
                    </div>
                </div>
                @* Encouraging message based on score percentage *@
                <p class="mt-2" v-if="percentage === 100">
                    <span class="badge bg-success">Perfect Score!</span>
                </p>
                <p class="mt-2" v-else-if="percentage >= 70">
                    <span class="badge bg-success">Great Job!</span>
                </p>
                <p class="mt-2" v-else-if="percentage >= 50">
                    <span class="badge bg-warning">Good Try!</span>
                </p>
                <p class="mt-2" v-else>
                    <span class="badge bg-danger">Keep Practicing!</span>
                </p>
            </div>
        </div>

        <a href="/Quiz" class="btn btn-primary btn-lg mt-3">Back to Quizzes</a>
    </div>
</div>

@section Scripts {

    <script>
        const { createApp } = Vue;

        const initial = @Html.Raw(resultJson);

        createApp({
            data() {
                return {
                    result: initial
                };
            },
            computed: {
                @* Calculates percentage score (earned / total * 100) *@
                percentage() {
                    if (this.result.total === 0) return 0;
                    return (this.result.earned / this.result.total) * 100;
                }
            }
        }).mount("#quiz-result-app");
        window.addEventListener("error", function (event) {
            console.error("Client error on Quiz Result page:", event.error || event.message);
        });
    </script>
}
