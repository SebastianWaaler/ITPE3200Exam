@model Question
<input type="hidden" asp-for="QuizId" />
<div class="mb-3">
    <label asp-for="Text" class="form-label"></label>
    <input asp-for="Text" class="form-control" />
    <span asp-validation-for="Text" class="text-danger"></span>
</div>
<div class="mb-3">
    <label asp-for="Points" class="form-label"></label>
    <input asp-for="Points" class="form-control" type="number" />
    <span asp-validation-for="Points" class="text-danger"></span>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Client-side error handler for this page
        window.addEventListener("error", function (event) {
            console.error("Client error on Create Question page:", event.error || event.message);
            alert("Something went wrong on this page. Please try again.");
        });
    </script>
}
