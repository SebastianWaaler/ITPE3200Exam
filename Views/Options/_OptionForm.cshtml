@model Option
<input type="hidden" asp-for="QuestionId" />
<div class="mb-3">
    <label asp-for="Text" class="form-label"></label>
    <input asp-for="Text" class="form-control" />
    <span asp-validation-for="Text" class="text-danger"></span>
</div>
<div class="form-check mb-3">
    <input asp-for="IsCorrect" class="form-check-input" />
    <label asp-for="IsCorrect" class="form-check-label"></label>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Client-side error handler for this page
        window.addEventListener("error", function (event) {
            console.error("Client error on Create Option page:", event.error || event.message);
            alert("Something went wrong on this page. Please try again.");
        });
    </script>
}